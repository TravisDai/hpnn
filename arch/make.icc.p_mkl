CC=icc -ip
AR=ar
RANLIB=ranlib
# blas
BLAS_INC = -I$MKLROOT/include -D_MKL
BLAS_LIB = -liomp5 -lpthread -lm -ldl
# tweak
CFLAGS=-Wall -std=c99 -DHAVE_C99
OPTFLAGS=-O2 -mkl=parallel -qopenmp -D_OMP -DPBLAS
DBGFLAGS=-g -debug all -ggdb -DDEBUG
GCFLAGS=`pkg-config --cflags glib-2.0`
GLFLAGS=`pkg-config --libs glib-2.0`
# context
INCFLAGS = -I. -I./include $(BLAS_INC)
INCDBGFLAGS = -I. -I./include
LDFLAGS = $(BLAS_LIB)
DBGLDFLAGS =
LIBS = -lm
